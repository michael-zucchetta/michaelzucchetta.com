{
    "compilerOptions": {
        "module": "amd",
        "basePath:": "src/",
        "target": "es5",
        "fast": "never",
        "inlineSourceMap": true,
        "outDir": "dist/"
    },
    "filesGlob": [
        "src/js/**/*.ts",
        "!node_modules/**",
        "!dist",
        "typings/main.d.ts",
        "src/tests/**/*.ts"
    ],
    "files": [
        "src/js/classes/BaseClass.ts",
        "src/js/classes/Constants.ts",
        "src/js/classes/Keys.ts",
        "src/js/classes/TextEditor.ts",
        "src/js/initialisation/main.ts",
        "typings/main.d.ts",
        "src/tests/unit/JsonEditorSpec.ts",
        "src/tests/unit/TextEditorSpec.ts",
        "src/tests/utils/utils.ts"
    ]
}
